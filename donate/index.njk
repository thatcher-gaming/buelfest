<script type="module">
    const kofi_url = window.location.hostname === 'localhost'
        ? "http://localhost:3000/api/donations"
        : "https://buelfest.onrender.com/api/donations";

    async function updateKofi() {
        try {
            const res = await fetch(kofi_url);
            if (!res.ok)
                return;
            const json = await res.json();

            const elem = document.getElementById('lio');
            if (elem && json.lio && json.lio.total !== undefined) {
                elem.innerText = "$" + json.lio.total.toFixed(0);
            }
        } catch (error) {
            console.error('Failed to update Ko-fi donations:', error);
        }
    }

    // Initial update
    updateKofi();

    // Update every 10 seconds
    setInterval(updateKofi, 10000);
</script>
