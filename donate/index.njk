---
layout: base.njk
---

{% block head %}
<link rel="stylesheet" href="/assets/donate.css">
<script type="module" src="/assets/scripts/colour.js"></script>
{% endblock %}

<main>
    {# ignore this #}
    <h1 aria-label="donate">
        donations
    </h1>

    <h2>gofundmes</h2>
    
    <div>
        <ul class="fundraisers">
            {% for item in gofundmes %}
            <li>
                <img src="{{item.image.webp[0].url}}" alt="">
                <div>
                    <h3>
                        {{item.title}}
                    </h3>
                    <span class="raised">
                        <big>${{item.current}}</big> raised outta ${{item.goal}}
                    </span>
                </div>
            </li>
            {% endfor %}
        </ul>
    </div>
</main>